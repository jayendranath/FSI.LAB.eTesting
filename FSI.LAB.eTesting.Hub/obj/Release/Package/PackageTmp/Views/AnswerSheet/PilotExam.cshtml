<script type="text/javascript">
    $(function () {

        $('.chkclass').on('ifClicked', function () {
            $("[name='" + $(this).attr("name") + "']").not(this).iCheck('uncheck');
        });
    });
    $(document).on("click", "#imageToggle", function () {
        if ($('#divImage').is(":visible")) {
            $('#divImage').hide();
            $('#divMain').removeClass('col-md-6');
            $('#divMain').addClass('col-md-12');
            //return;
        }
        else  {
            $('#divImage').show();
            $('#divMain').removeClass('col-md-12');
            $('#divMain').addClass('col-md-6');
            $('#divImage').addClass('col-md-6');
            //return;
        }
    });
    $(document).ready(function () {
        $('#divImage').hide();
        $('#divMain').removeClass('col-md-6');
        $('#divMain').addClass('col-md-12');
        $('#divImage').removeClass('col-md-6');
        
    })
</script>

