<script type="text/javascript">

    $(document).ready(function () {
        var loghtml = '<h3 class="control-sidebar-heading">Recent Activity</h3>';
        $('#control-sidebar-home-tab').empty();
        $.ajax({
            url: '@System.Configuration.ConfigurationManager.AppSettings["webAPIURL"]/api/eventlogs',
            //contentType: 'text/plain',
            contentType: "application/json; charset=utf-8",
            dataType: 'json',
            type: "GET", cache: false, async: false,
            success: function (data) {
                if (data != "[]") {
                    $.each(data, function (index, val) {
                        loghtml += '<div class="menu-info ">';
                        loghtml += '<h4 class="control-sidebar-subheading no-padding">' + val.Notes + '</h4>';
                        loghtml += 'at ' + timeSince(new Date(val.CreatedDate)) + '</div><div class="list-seperator"></div>';
                    });
                }
            },
            error: function (x, y, z) {
                alert(x.responseText + "  " + x.status);
            }
        });
        $('#control-sidebar-home-tab').append(loghtml);
    })

</script>

