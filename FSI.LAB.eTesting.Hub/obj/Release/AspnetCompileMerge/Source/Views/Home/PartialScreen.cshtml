                            <tfoot>
                                <tr>
                                    <td>
                                        <button type="button" class="btn btn-group-lg btn-primary dropdown-toggle" data-bind="click: addNewRow">
                                            Add Screen
                                        </button>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
