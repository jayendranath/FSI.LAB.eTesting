        <div class="box box-default">

            <div class="box-body">
                <!--Examinee list -->

                <div class="row">

                    <div class="form-group" style="margin-top:5px">
                        <table border=1 style="width:100%" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width:5%">
                                        Screen Name
                                    </th>
